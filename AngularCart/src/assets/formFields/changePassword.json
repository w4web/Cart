[
  {
    "validators": {
      "validation": [
        {
          "name": "fieldMatch",
          "options": {
            "errorPath": "passwordConfirm"
          }
        }
      ]
    },
    "fieldGroupClassName": "grid gutter-10",
    "fieldGroup": [
      {
        "key": "oldPassword",
        "type": "input",
        "className": "col-12",
        "templateOptions": {
          "type": "password",
          "label": "Old password",
          "required": true
        }
      },
      {
        "key": "password",
        "type": "input",
        "className": "col-12",
        "templateOptions": {
          "type": "password",
          "label": "New password",
          "required": true,
          "minLength": 3
        }
      },
      {
        "key": "passwordConfirm",
        "type": "input",
        "className": "col-12",
        "templateOptions": {
          "type": "password",
          "label": "Confirm new password",
          "required": true
        }
      }
    ]
  }
]
